#!/usr/bin/env bash

# ---------------------------- DOTFILES ----------------------------

# Set dotfiles directory (only if not already set by .zshenv)
if [[ -z "$DOTFILES" ]]; then
  if [[ -n "${BASH_SOURCE[0]}" ]]; then
    export DOTFILES="$(cd "$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")/.." && pwd)"
  elif [[ -n "$0" ]]; then
    export DOTFILES="$(cd "$(dirname "$0")/.." && pwd)"
  else
    echo "Error: Cannot determine dotfiles location" >&2
    exit 1
  fi
fi

# ---------------------------- SHELL ----------------------------

# Prefer US English and use UTF-8.
export LANG='en_US.UTF-8'
export LC_ALL='en_US.UTF-8'

# ---------------------------- EDITOR ----------------------------

if [[ "$(uname)" == "Darwin" ]]; then
  export EDITOR='cursor'
  export KUBE_EDITOR='cursor'
  export VISUAL='cursor'
else
  export EDITOR='nvim'
  export KUBE_EDITOR='nvim'
  export VISUAL='nvim'
fi

# ---------------------------- NODE ----------------------------

# Enable persistent REPL history for `node`.
export NODE_REPL_HISTORY=~/.node_history
# Allow 32³ entries; the default is 1000.
export NODE_REPL_HISTORY_SIZE='32768'
# Use sloppy mode by default, matching web browsers.
export NODE_REPL_MODE='sloppy'

# ---------------------------- PYTHON ----------------------------

# Make Python use UTF-8 encoding for output to stdin, stdout, and stderr.
export PYTHONIOENCODING='UTF-8'

# ---------------------------- HISTORY ----------------------------

# Increase Bash history size. Allow 32³ entries; the default is 500.
export HISTSIZE=32768
export HISTFILESIZE=32768
export SAVEHIST=32768

# Omit duplicates and commands that begin with a space from history.
export HISTCONTROL='ignoreboth'

# ---------------------------- MACOS ----------------------------

# Hide the “default interactive shell is now zsh” warning on macOS.
export BASH_SILENCE_DEPRECATION_WARNING=1

# Homebrew
export HOMEBREW_NO_ENV_HINTS=true

# ---------------------------- PAGING ----------------------------

if command -v moor >/dev/null 2>&1; then
  export PAGER='moor'
  export MOOR_PAGER='less'  # Use less as the pager for moor's own help pages
  export MOOR_STYLE='plain' # Set a clean, readable style with syntax highlighting
  export MOOR_KEYBINDINGS='q:quit,h:help,j:down,k:up,g:top,G:bottom,f:forward,b:backward,/:search,n:next,N:prev'
fi

# Don’t clear the screen after quitting a manual page.
export MANPAGER='less -X'

# Highlight section titles in manual pages.
export LESS_TERMCAP_md="${yellow}"

# ---------------------------- GPG ----------------------------

# Avoid issues with `gpg` as installed via Homebrew.
# https://stackoverflow.com/a/42265848/96656
export GPG_TTY=$(tty)

# ---------------------------- GOOGLE CLOUD ----------------------------

[ -f $HOME/.config/gcloud/application_default_credentials.json ] &&
  export GOOGLE_APPLICATION_CREDENTIALS=$HOME/.config/gcloud/application_default_credentials.json

# CLI mapping for py version
export CLOUDSDK_PYTHON=python3
export CLOUDSDK_PYTHON_SITEPACKAGES=1
